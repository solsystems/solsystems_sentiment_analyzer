# Secrets in this file are only used for destination staging, and merged with secrets-common.

OP_SECRETS=$(kamal secrets fetch --adapter 1password --account solsystems.1password.com --from "Sentiment Analyzer" postgres-staging/DATABASE_URL ssl-cert-staging/SSL_CERTIFICATE ssl-cert-staging/SSL_PRIVATE_KEY)
DATABASE_URL=$(kamal secrets extract DATABASE_URL ${OP_SECRETS})
